<Window x:Class="CLIESC_ConUni_SOAPDOTNET_GR03.ConversionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CLIESC_ConUni_SOAPDOTNET_GR03"
        mc:Ignorable="d"
        Title="Conversor de Unidades" Height="750" Width="500"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style x:Key="SectionGroupBox" TargetType="GroupBox">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="Background" Value="#F5F5F5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#2A3A8D"/>
        </Style>
        <Style x:Key="ResultCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style x:Key="ResultHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#2A3A8D"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel Orientation="Vertical">

                <ComboBox x:Name="cmbUserMenu" 
                          HorizontalAlignment="Right" 
                          FontWeight="Bold" 
                          Foreground="#2A3A8D"
                          BorderThickness="0" 
                          Background="Transparent"
                          SelectionChanged="cmbUserMenu_SelectionChanged">
                </ComboBox>

                <TextBlock Text="Conversor del Servicio" FontSize="22" FontWeight="Bold" Margin="0,10,0,10" HorizontalAlignment="Center"
                           Foreground="#2A3A8D"/>

                <GroupBox Header="1. Valores de Entrada" Style="{StaticResource SectionGroupBox}">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Masa:" VerticalAlignment="Center" Margin="5" Foreground="Black" FontWeight="Normal"/>
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtMassValue" Text="100" Margin="5"/>
                        <ComboBox Grid.Row="0" Grid.Column="2" x:Name="cmbMassUnit" Margin="5" SelectedIndex="0">
                            <ComboBoxItem Content="Kilogramos (kg)"/>
                            <ComboBoxItem Content="Gramos (g)"/>
                            <ComboBoxItem Content="Libras (lb)"/>
                        </ComboBox>
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Temperatura:" VerticalAlignment="Center" Margin="5" Foreground="Black" FontWeight="Normal"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtTempValue" Text="20" Margin="5"/>
                        <ComboBox Grid.Row="1" Grid.Column="2" x:Name="cmbTempUnit" Margin="5" SelectedIndex="0">
                            <ComboBoxItem Content="Celsius (C)"/>
                            <ComboBoxItem Content="Fahrenheit (F)"/>
                            <ComboBoxItem Content="Kelvin (K)"/>
                        </ComboBox>
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Latitud:" VerticalAlignment="Center" Margin="5" Grid.ColumnSpan="1" Foreground="Black" FontWeight="Normal"/>
                        <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtLatitude" Text="40.7128" Margin="5" Grid.ColumnSpan="2"/>
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Longitud 1:" VerticalAlignment="Center" Margin="5" Foreground="Black" FontWeight="Normal"/>
                        <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtLongitude" Text="-74.0060" Margin="5" Grid.ColumnSpan="2"/>
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Longitud 2:" VerticalAlignment="Center" Margin="5" Foreground="Black" FontWeight="Normal"/>
                        <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtLongitude2" Text="-118.2437" Margin="5" Grid.ColumnSpan="2"/>
                    </Grid>
                </GroupBox>

                <Button x:Name="btnConvertir" Content="CONVERTIR" Click="btnConvertir_Click" Margin="0,15,0,0" 
                        Style="{StaticResource PrimaryButton}"/>

                <GroupBox Header="2. Resultados de la Conversión" Style="{StaticResource SectionGroupBox}">
                    <StackPanel Margin="10">
                        <Border Style="{StaticResource ResultCard}">
                            <StackPanel>
                                <TextBlock Text="Masa:" Style="{StaticResource ResultHeader}"/>
                                <TextBlock x:Name="lblResultMassLb" Text="Libras (Lb): ..."/>
                                <TextBlock x:Name="lblResultMassG" Text="Gramos (G): ..."/>
                                <TextBlock x:Name="lblResultMassKg" Text="Kilogramos (Kg): ..."/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource ResultCard}">
                            <StackPanel>
                                <TextBlock Text="Temperatura:" Style="{StaticResource ResultHeader}"/>
                                <TextBlock x:Name="lblResultTempF" Text="Fahrenheit (F): ..."/>
                                <TextBlock x:Name="lblResultTempK" Text="Kelvin (K): ..."/>
                                <TextBlock x:Name="lblResultTempC" Text="Celsius (C): ..."/>
                            </StackPanel>
                        </Border>
                        <Border Style="{StaticResource ResultCard}">
                            <StackPanel>
                                <TextBlock Text="Coordenadas (DMS):" Style="{StaticResource ResultHeader}"/>
                                <TextBlock x:Name="lblResultLatDMS" Text="Latitud 1: ..."/>
                                <TextBlock x:Name="lblResultLonDMS" Text="Longitud 1: ..."/>
                                <TextBlock x:Name="lblResultLon2DMS" Text="Longitud 2: ..."/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <TextBlock Grid.Row="1" 
                   Text="© 2025 Conversor de Unidades | GR03" 
                   HorizontalAlignment="Center" 
                   Foreground="Gray" 
                   FontSize="11" 
                   Margin="0,10,0,0"/>

    </Grid>
</Window>