<Window x:Class="CLIESC_ConUni_RESTDOTNET_GR03.Views.ConversionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Conversor de Unidades" Height="750" Width="500"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">

                <ComboBox x:Name="cmbUserMenu" 
                          HorizontalAlignment="Right" 
                          FontWeight="Bold" 
                          Foreground="#2A3A8D"
                          BorderThickness="0" 
                          Background="Transparent"
                          SelectionChanged="cmbUserMenu_SelectionChanged">
                </ComboBox>

                <TextBlock Text="Conversor de Unidades" FontSize="22" FontWeight="Bold" Margin="0,10,0,10" HorizontalAlignment="Center" Foreground="#2A3A8D"/>

                <GroupBox Header="1. Valores de Entrada" FontWeight="Bold" Margin="0,10,0,0" Background="#F5F5F5">
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tipo de Conversión:" VerticalAlignment="Center" Margin="5"/>
                        <ComboBox Grid.Row="0" Grid.Column="1" x:Name="cmbTipo" Margin="5" SelectionChanged="cmbTipo_SelectionChanged"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Valor a Convertir:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtValor" Text="100" Margin="5"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="De:" VerticalAlignment="Center" Margin="5"/>
                        <ComboBox Grid.Row="2" Grid.Column="1" x:Name="cmbUnidadDe" Margin="5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="A:" VerticalAlignment="Center" Margin="5"/>
                        <ComboBox Grid.Row="3" Grid.Column="1" x:Name="cmbUnidadA" Margin="5"/>
                    </Grid>
                </GroupBox>

                <Button x:Name="btnConvertir" Content="CONVERTIR" Click="btnConvertir_Click" Margin="0,15,0,0" Style="{StaticResource PrimaryButton}"/>

                <GroupBox Header="2. Resultados de la Conversión" FontWeight="Bold" Margin="0,15,0,0" Background="#F5F5F5">
                    <StackPanel Margin="10">
                        <Border Background="White" CornerRadius="3" Padding="8" Margin="0,5,0,5" BorderBrush="#E0E0E0" BorderThickness="1">
                            <TextBlock x:Name="lblResultado" Text="Resultado: ..." FontSize="16" FontWeight="Bold"/>
                        </Border>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>

        <TextBlock Grid.Row="1" Text="© 2025 Conversor de Unidades | GR03" HorizontalAlignment="Center" Foreground="Gray" FontSize="11" Margin="0,10,0,0"/>
    </Grid>
</Window>