<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Soapconuniclmovgro3">
        
        <!-- LoginActivity como actividad de inicio -->
        <activity
            android:name=".arguello.LoginActivity"
            android:exported="true"
            android:label="Inicio de Sesión"
            android:theme="@style/Theme.Soapconuniclmovgro3">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- MainActivity (pantalla principal después de login) -->
        <activity
            android:name=".arguello.MainActivity"
            android:exported="false"
            android:label="Conversor de Moneda"
            android:theme="@style/Theme.Soapconuniclmovgro3" />
            
    </application>

</manifest>